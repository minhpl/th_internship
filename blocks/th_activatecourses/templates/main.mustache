{{!
    @template block_th_activatecourses/main

    This template renders the main content area for the th_activatecourses block.

    Example context (json):
    {}
}}

<div id="block-th_activatecourses-{{uniqid}}" class="block-th_activatecourses block-cards" data-region="th_activatecourses" role="navigation">

            <div data-region="filter" class="d-flex align-items-center flex-wrap" aria-label="{{#str}} aria:controls, block_th_activatecourses {{/str}}">
                
                {{#displaydropdown}}
                    {{> block_th_activatecourses/nav-display-selector }}
                {{/displaydropdown}}
            </div>

    <div class="container-fluid p-0">
        {{> block_th_activatecourses/courses-view }}
    </div>
</div>

{{#js}}
require(
[
    'jquery',
    'block_th_activatecourses/main',
],
function(
    $,
    Main
) {
    var root = $('#block-th_activatecourses-{{uniqid}}');
    Main.init(root);
});
{{/js}}
